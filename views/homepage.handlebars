<div class="container">
  <div class="row homepage-main">
    {{#each blog as |blog|}}
      <div class="row mb-4 project card text-dark shadow">
        <div class="card-header">
          <h3>
            <a href="/blog/{{blog.id}}">{{blog.title}}</a>
          </h3>
          <p>Created by
            {{blog.user.name}}
            on
            {{format_date blog.date_created}}</p>
        </div>
        <div class="card-body">
          <p>{{blog.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>